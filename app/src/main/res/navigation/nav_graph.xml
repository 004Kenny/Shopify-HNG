<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/navigation_products">

    <fragment
        android:id="@+id/navigation_products"
        android:name="com.example.shopify.ProductsFragment"
        android:label="Products"
        tools:layout="@layout/fragment_products" />

    <fragment
        android:id="@+id/navigation_checkout"
        android:name="com.example.shopify.CheckoutFragment"
        android:label="Checkout"
        tools:layout="@layout/fragment_checkout">
        <action
            android:id="@+id/action_checkout_to_order_successful"
            app:destination="@id/navigation_order_successful" />
    </fragment>

    <fragment
        android:id="@+id/navigation_order_successful"
        android:name="com.example.shopify.OrderSuccessfulFragment"
        android:label="Order Successful"
        tools:layout="@layout/fragment_order_successful">
        <action
            android:id="@+id/action_order_successful_to_products"
            app:destination="@id/navigation_products" />
    </fragment>
</navigation>
